<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edittext_background"
    android:padding="16dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/txtNomeRemetente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do usuÃ¡rio"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtDataConvite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviado em: 00/00/0000"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnRecusarConvite"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Recusar"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:backgroundTint="#E8258E" />

        <Button
            android:id="@+id/btnAceitarConvite"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Aceitar"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:backgroundTint="#E8258E"/>

    </LinearLayout>

</LinearLayout>